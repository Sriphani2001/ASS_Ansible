global
    log         127.0.0.1 local2
    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group       haproxy
    daemon
    stats socket /var/lib/haproxy/stats

defaults
    mode                    http
    log                     global
    option                  httplog
    option                  dontlognull
    timeout connect         5000
    timeout client          50000
    timeout server          50000

frontend web-frontend
    bind *:80
    mode http
    default_backend web-backend

backend web-backend
        balance roundrobin
	mode http
	option forwardfor
   {% for dev_servers in groups['webservers'] %}
    server  {{ dev_servers }} {{ 
hostvars[dev_servers]["ansible_default_ipv4"]["address"]}}:8080
   {% endfor %}

listen stats
    bind *:8404
    stats enable
    stats uri /monito
    stats refresh 5s  

